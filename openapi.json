            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Anúncio",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "description": "Resultado da requisição"
                    },
                    "data": {
                      "$ref": "#/components/schemas/CarResponse"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
